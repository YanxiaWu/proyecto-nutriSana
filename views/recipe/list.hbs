<div class="container">
  <h1 style="margin-top:20px;">Todos las recetas</h1>
  <a href="/" class="btn btn-dark">Back to Homepage</a>
  <hr />
  <div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each recipes}}
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title" style="font-weight:bolder;">Nutrition data</h4>
          <h5>Owner: {{#each owner}}
            {{this.username}}
            {{/each}}
          </h5>

          <hr>
          {{#each ingredients}}
          <p>{{this}}</p>
          {{/each}}
          <hr>
          <h5 class="card-title">Calories</h5>
          <p class="card-text">{{calories}}g</p>
          <hr>
          <h5 class="card-title">Carbohydrate</h5>
          <p class="card-text">{{carbohydrate}}g</p>
          <hr>
          <h5 class="card-title">Fat</h5>
          <p class="card-text">{{fat}}g</p>
          <hr>

          <h5 class="card-title">Protein</h5>
          <p class="card-text">{{protein}}g</p>
          <hr>
          {{#if ../isAdmin}}
          <form action="/recetas/{{_id}}/eliminar" method="POST" style="display: inline">
            <input type="submit" value="Delete this recipe" class="btn btn-danger" />
          </form>
          {{/if}}
        </div>

      </div>

    </div>


    {{/each}}
  </div>
</div>