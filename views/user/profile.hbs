  <div class="row">
    <a href="/recetas/mis-recetas" class="btn btn-dark">Ver recetas guardadas</a>
  </div>
</div>

<div class="container">

  <hr />
  {{#if isAdmin}}
    <form
      action="/usuarios/{{user._id}}/eliminar"
      method="POST"
      style="display: inline"
    >
      <input type="submit" value="Delete this user" class="btn btn-danger" />
    </form>
  {{/if}}
  {{#if isMY}}
    <a href="/recetas/crear" class="btn btn-dark">Create recipe</a>
    <a href="/usuarios/{{user._id}}/editar" class="btn btn-warning">Edit my
      profile</a>
  {{/if}}
  <a href="/usuarios" class="btn btn-dark">Back to cheack all users</a>

</div>